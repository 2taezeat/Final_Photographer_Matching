<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mypage_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.95"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="채팅"
            app:titleTextColor="@color/main_color"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/home_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp"
            android:background="@color/main_color"
            >
        </View>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:contentPadding="10dp"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image"
                        android:background="#3CEA8888"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="호랭이 사진"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루 전"
                    android:textSize="12sp"
                    android:layout_marginStart="320dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="안녕하세요! 포토폴리오 보고 연락드립니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="80dp"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:contentPadding="10dp"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image"
                        android:background="#3CEABB88"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tim"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루 전"
                    android:textSize="12sp"
                    android:layout_marginStart="320dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="가격표 보고 문의드립니다."
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="80dp"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:contentPadding="10dp"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image"
                        android:background="#3CAA88EA"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="pickKKU"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 달전"
                    android:textSize="12sp"
                    android:layout_marginStart="320dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="안녕하세요. 혹시 안암에서 졸업스냅샷 가능한가요?"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="80dp"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.6"
                app:contentPadding="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image"
                        android:background="#3C78A3F8"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="qowen21231"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 달전"
                    android:textSize="12sp"
                    android:layout_marginStart="320dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="12/24 까지 스튜디오로 오시면 됩니다."
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="80dp"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.8"
                app:contentPadding="10dp"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image"
                        android:background="#3C73D58F"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="KU_Photographer"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 달전"
                    android:textSize="12sp"
                    android:layout_marginStart="320dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="바디프로필도 촬영 가능한가요?"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="80dp"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/home_search_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_baseline_chat_24"
                app:startIconTint="@color/main_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:boxBackgroundColor="@color/grey"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/home_search_edit_text"
                    android:fontFamily="@font/dohyeon_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="채팅을 입력해주세요."
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보내기"
                android:fontFamily="@font/nanumgothic_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                >

            </Button>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>