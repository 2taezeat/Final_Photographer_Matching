<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.NotificationFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mypage_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.95"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="알림"
            app:titleTextColor="@color/main_color"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/home_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp"
            android:background="@color/main_color"
            >
        </View>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:contentPadding="10dp"
                android:backgroundTint="@color/white_pink"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                     >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#8DC0D8"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="'mynickname1' 님 께서 채팅을 보냈습니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/15 11:05"
                    android:textSize="12sp"
                    android:layout_marginTop="46dp"
                    android:layout_marginStart="280dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:contentPadding="10dp"
                android:backgroundTint="@color/grey"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#A0E4A7"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="포토폴리오를 갱신하였습니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/10 11:05"
                    android:textSize="12sp"
                    android:layout_marginTop="46dp"
                    android:layout_marginStart="280dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:contentPadding="10dp"
                android:backgroundTint="@color/white_pink"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#A0E4E2"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="쿠폰 등록으로 3,000 포인트가 추가되었습니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/08 11:05"
                    android:textSize="12sp"
                    android:layout_marginTop="46dp"
                    android:layout_marginStart="280dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.6"
                app:contentPadding="10dp"
                android:backgroundTint="@color/white_pink"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#A0E4E2"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SNS 해쉬태그 이벤트에 참여하시면 포인트를 드립니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/07 11:05"
                    android:textSize="12sp"
                    android:layout_marginTop="46dp"
                    android:layout_marginStart="280dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.8"
                app:contentPadding="10dp"
                android:backgroundTint="@color/grey"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#D2A0E4"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="신규 작가 및 스튜디오에 등록되었습니다!"
                    android:fontFamily="@font/dohyeon_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="60dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/05 11:05"
                    android:textSize="12sp"
                    android:layout_marginTop="46dp"
                    android:layout_marginStart="280dp"
                    android:fontFamily="@font/nanumgothic_regular"
                    >
                </TextView>

            </androidx.cardview.widget.CardView>









        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>